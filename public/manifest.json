{
  "manifest_version": 3,
  "name": "SpeedPilot",
  "version": "1.0.0",
  "description": "Automatically sets YouTube playback speed",

  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["storage"],

  "host_permissions": ["https://www.youtube.com/*"],

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

